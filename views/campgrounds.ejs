 <%-include("partials/header")-%>

 

<div class="container"> 
                                       
 <header class="jumbotron mt-3 text-center">         
  <div class="container"> 
  <h1>Welcome to Photo Gallery!</h1>
  <p>View your best selected photos</p>
  <a href="/campgrounds/new" class="btn btn-primary ">Add new Photos</a>
  </div>
</header>

<div class="row"> 
    <%campgrounds.forEach(function(campground){%>
      <div class="card col-lg-3 col-md-6">
        <img class="card-img-top mt-3 img-fluid" src="./uploads/<%=campground.image%>">
        <div class="card-body text-center">
          <h5 class="card-title font-weight-bold"><%=campground.name%></h5>
           <p class="card-text font-italic"><%=campground.description%></p>
           
         <!--  <a href="/campgrounds/<%=campground. _id%>" class="btn btn-primary mb-2">More Info</a> -->
           
          <a href="./uploads/<%=campground.image%>" download  class="btn btn-outline-secondary mb-2">Download</a>  
           <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post" >
               <button type="submit" class="btn btn-outline-danger ">Delete</button>
           </form> 
                  
           
          </div>
      </div>
   <%})%>
</div> 

</div>
<%-include("partials/footer")-%>   